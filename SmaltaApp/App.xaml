                <ResourceDictionary Source="/Controls/DataGrid.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Controls/ComboBox.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Controls/Button.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Controls/ToggleButton.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Controls/ScrollView.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Controls/TabControl.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Controls/CheckBox.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
